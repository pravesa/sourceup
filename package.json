{
  "name": "@sourceup/monorepo",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/pravesa/sourceup.git"
  },
  "workspaces": [
    "client/*",
    "docs/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "turbo": "^1.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "yarn lint --max-warnings=0 --fix"
    ],
    "*.{md,html,css}": "prettier --write"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">=3.3.0"
  },
  "packageManager": "yarn@3.3.0"
}
